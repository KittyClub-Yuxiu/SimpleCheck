<Window x:Class="SimpleCheck.TaskEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleCheck"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        xmlns:utils="clr-namespace:SimpleCheck.Utilities"
        xmlns:converters="clr-namespace:SimpleCheck.Converters"
        mc:Ignorable="d"
        Title="添加日程"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="460" Height="480">

    <Window.Resources>
        <SolidColorBrush x:Key="WindowBackground" Color="#FDFDF9" />
        
        <SolidColorBrush x:Key="PanelBackground" Color="#FFFFFF" />
        
        <SolidColorBrush x:Key="AccentColor" Color="#5A8B7E" />
        
        <SolidColorBrush x:Key="PrimaryColor" Color="#7EB5A6" />
        
        <SolidColorBrush x:Key="TextColor" Color="#333333" />
        <SolidColorBrush x:Key="TextLightColor" Color="#888888" />
        <SolidColorBrush x:Key="BorderColor" Color="#EFEFEF" />

        <converters:TimeDisplayConverter x:Key="TimeDisplayConverter"/>
        <local:TaskTypeConverter x:Key="TaskTypeConverter"/>

        <x:Array x:Key="HourList" Type="sys:Int32">
            <sys:Int32>0</sys:Int32><sys:Int32>1</sys:Int32><sys:Int32>2</sys:Int32><sys:Int32>3</sys:Int32>
            <sys:Int32>4</sys:Int32><sys:Int32>5</sys:Int32><sys:Int32>6</sys:Int32><sys:Int32>7</sys:Int32>
            <sys:Int32>8</sys:Int32><sys:Int32>9</sys:Int32><sys:Int32>10</sys:Int32><sys:Int32>11</sys:Int32>
            <sys:Int32>12</sys:Int32><sys:Int32>13</sys:Int32><sys:Int32>14</sys:Int32><sys:Int32>15</sys:Int32>
            <sys:Int32>16</sys:Int32><sys:Int32>17</sys:Int32><sys:Int32>18</sys:Int32><sys:Int32>19</sys:Int32>
            <sys:Int32>20</sys:Int32><sys:Int32>21</sys:Int32><sys:Int32>22</sys:Int32><sys:Int32>23</sys:Int32>
        </x:Array>

        <x:Array x:Key="MinuteList" Type="sys:Int32">
            <sys:Int32>0</sys:Int32><sys:Int32>5</sys:Int32><sys:Int32>10</sys:Int32><sys:Int32>15</sys:Int32>
            <sys:Int32>20</sys:Int32><sys:Int32>25</sys:Int32><sys:Int32>30</sys:Int32><sys:Int32>35</sys:Int32>
            <sys:Int32>40</sys:Int32><sys:Int32>45</sys:Int32><sys:Int32>50</sys:Int32><sys:Int32>55</sys:Int32>
        </x:Array>
        
        <Style x:Key="WheelItemStyle" TargetType="ListBoxItem">
            <Setter Property="Height" Value="45"/> <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Name="Border" Background="Transparent" SnapsToDevicePixels="True">
                            <TextBlock Text="{Binding}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"
                                       Name="TextElement"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="TextElement" Property="Foreground" Value="{StaticResource AccentColor}"/>
                                <Setter TargetName="TextElement" Property="FontSize" Value="24"/>
                                <Setter TargetName="TextElement" Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter TargetName="TextElement" Property="Foreground" Value="#CCCCCC"/>
                                <Setter TargetName="TextElement" Property="FontSize" Value="16"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TextElement" Property="Foreground" Value="{StaticResource PrimaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="WheelListBoxStyle" TargetType="ListBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Hidden"/> 
            <Setter Property="ScrollViewer.CanContentScroll" Value="False"/> 
            <Setter Property="ScrollViewer.PanningMode" Value="VerticalOnly"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border Name="Bd" BorderThickness="0" Background="{TemplateBinding Background}" SnapsToDevicePixels="true">
                            <ScrollViewer Focusable="false" Padding="{TemplateBinding Padding}">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border Background="{StaticResource WindowBackground}" CornerRadius="16" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="5" Opacity="0.2" Color="#334433"/>
        </Border.Effect>
        
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

            <TextBlock Text="新建日程" FontSize="24" FontWeight="Bold" 
                       Foreground="{StaticResource TextColor}" Margin="0,0,0,30"/>

            <Grid Grid.Row="1" Margin="0,0,0,30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Text="要做什么？" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource TextLightColor}" Margin="0,0,0,10"/>
                
                <Border Grid.Row="1" Background="{StaticResource PanelBackground}" CornerRadius="8" 
                        BorderBrush="{StaticResource BorderColor}" BorderThickness="1" Height="50">
                    <TextBox x:Name="ContentTextBox" 
                             Text="{Binding Task.Content, UpdateSourceTrigger=PropertyChanged}" 
                             FontSize="16" Foreground="{StaticResource TextColor}"
                             VerticalContentAlignment="Center" Padding="15,0"
                             BorderThickness="0" Background="Transparent"
                             CaretBrush="{StaticResource AccentColor}"/>
                </Border>
            </Grid>

            <Grid Grid.Row="2" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="开始时间" FontSize="13" Foreground="{StaticResource TextLightColor}" Margin="0,0,0,8"/>
                    
                    <DatePicker utils:TimePickerExtensions.SelectedTime="{Binding Task.StartTime}">
                        <DatePicker.Template>
                            <ControlTemplate TargetType="DatePicker">
                                <Border Background="{StaticResource PanelBackground}" BorderBrush="{StaticResource BorderColor}" 
                                        BorderThickness="1" CornerRadius="8" Height="50" Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                        
                                        <TextBlock Text="{Binding Path=(utils:TimePickerExtensions.SelectedTime), RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}, Converter={StaticResource TimeDisplayConverter}}"
                                                   VerticalAlignment="Center" Margin="15,0" FontSize="18" FontWeight="Bold" Foreground="{StaticResource AccentColor}"/>
                                        
                                        <ToggleButton x:Name="ToggleStart" Grid.ColumnSpan="2" Background="Transparent" BorderThickness="0" 
                                                      Content="" IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"/>
                                        
                                        <Popup IsOpen="{Binding IsChecked, ElementName=ToggleStart}" StaysOpen="False" Placement="Bottom" AllowsTransparency="True" PopupAnimation="Slide">
                                            <Border Background="White" CornerRadius="12" Margin="0,5,0,0" Width="240" Height="260">
                                                <Border.Effect><DropShadowEffect BlurRadius="20" Opacity="0.1"/></Border.Effect>
                                                <Grid ClipToBounds="True">
                                                    <Grid.RowDefinitions><RowDefinition Height="45"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                                                    <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                                                        <TextBlock Text="选择开始时间" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource TextLightColor}" FontSize="13"/>
                                                    </Border>
                                                    
                                                    <Grid Grid.Row="1">
                                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                                        
                                                        <ListBox Grid.Column="0" ItemsSource="{Binding Source={StaticResource HourList}}"
                                                                 SelectedItem="{Binding Path=(utils:TimePickerExtensions.SelectedHour), RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}, Mode=TwoWay}"
                                                                 Style="{StaticResource WheelListBoxStyle}" ItemContainerStyle="{StaticResource WheelItemStyle}"/>
                                                        
                                                        <ListBox Grid.Column="1" ItemsSource="{Binding Source={StaticResource MinuteList}}"
                                                                 SelectedItem="{Binding Path=(utils:TimePickerExtensions.SelectedMinute), RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}, Mode=TwoWay}"
                                                                 Style="{StaticResource WheelListBoxStyle}" ItemContainerStyle="{StaticResource WheelItemStyle}"/>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </DatePicker.Template>
                    </DatePicker>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="结束时间" FontSize="13" Foreground="{StaticResource TextLightColor}" Margin="0,0,0,8"/>
                    
                    <DatePicker utils:TimePickerExtensions.SelectedTime="{Binding Task.EndTime}">
                        <DatePicker.Template>
                            <ControlTemplate TargetType="DatePicker">
                                <Border Background="{StaticResource PanelBackground}" BorderBrush="{StaticResource BorderColor}" 
                                        BorderThickness="1" CornerRadius="8" Height="50" Cursor="Hand">
                                    <Grid>
                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="Auto"/></Grid.ColumnDefinitions>
                                        
                                        <TextBlock Text="{Binding Path=(utils:TimePickerExtensions.SelectedTime), RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}, Converter={StaticResource TimeDisplayConverter}}"
                                                   VerticalAlignment="Center" Margin="15,0" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                                        
                                        <ToggleButton x:Name="ToggleEnd" Grid.ColumnSpan="2" Background="Transparent" BorderThickness="0" 
                                                      Content="" IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"/>
                                        
                                        <Popup IsOpen="{Binding IsChecked, ElementName=ToggleEnd}" StaysOpen="False" Placement="Bottom" AllowsTransparency="True" PopupAnimation="Slide">
                                            <Border Background="White" CornerRadius="12" Margin="0,5,0,0" Width="240" Height="260">
                                                <Border.Effect><DropShadowEffect BlurRadius="20" Opacity="0.1"/></Border.Effect>
                                                <Grid ClipToBounds="True">
                                                    <Grid.RowDefinitions><RowDefinition Height="45"/><RowDefinition Height="*"/></Grid.RowDefinitions>
                                                    <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1">
                                                        <TextBlock Text="选择结束时间" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource TextLightColor}" FontSize="13"/>
                                                    </Border>
                                                    <Grid Grid.Row="1">
                                                        <Grid.ColumnDefinitions><ColumnDefinition Width="*"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                                        
                                                        <ListBox Grid.Column="0" ItemsSource="{Binding Source={StaticResource HourList}}"
                                                                 SelectedItem="{Binding Path=(utils:TimePickerExtensions.SelectedHour), RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}, Mode=TwoWay}"
                                                                 Style="{StaticResource WheelListBoxStyle}" ItemContainerStyle="{StaticResource WheelItemStyle}"/>
                                                        
                                                        <ListBox Grid.Column="1" ItemsSource="{Binding Source={StaticResource MinuteList}}"
                                                                 SelectedItem="{Binding Path=(utils:TimePickerExtensions.SelectedMinute), RelativeSource={RelativeSource AncestorType={x:Type DatePicker}}, Mode=TwoWay}"
                                                                 Style="{StaticResource WheelListBoxStyle}" ItemContainerStyle="{StaticResource WheelItemStyle}"/>
                                                    </Grid>
                                                </Grid>
                                            </Border>
                                        </Popup>
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </DatePicker.Template>
                    </DatePicker>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="3" Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <RadioButton Grid.Column="0" Content="单次日程" IsChecked="{Binding IsOneTimeTask}" GroupName="TaskType">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border Name="Border" Background="{StaticResource PanelBackground}" CornerRadius="20" Padding="15,8" Cursor="Hand">
                                <TextBlock Name="Text" Text="{TemplateBinding Content}" Foreground="{StaticResource TextLightColor}" FontSize="14"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentColor}"/>
                                    <Setter TargetName="Text" Property="Foreground" Value="White"/>
                                    <Setter TargetName="Text" Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>

                <RadioButton Grid.Column="2" Content="每日重复" IsChecked="{Binding IsDailyTask}" GroupName="TaskType">
                    <RadioButton.Template>
                        <ControlTemplate TargetType="RadioButton">
                            <Border Name="Border" Background="{StaticResource PanelBackground}" CornerRadius="20" Padding="15,8" Cursor="Hand">
                                <TextBlock Name="Text" Text="{TemplateBinding Content}" Foreground="{StaticResource TextLightColor}" FontSize="14"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource AccentColor}"/>
                                    <Setter TargetName="Text" Property="Foreground" Value="White"/>
                                    <Setter TargetName="Text" Property="FontWeight" Value="Bold"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </RadioButton.Template>
                </RadioButton>
            </Grid>

            <Grid Grid.Row="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="取消" Command="{Binding CancelCommand}" Height="45" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="8">
                                <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource TextLightColor}" FontSize="15"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.7"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="2" Content="创建日程" Command="{Binding SaveCommand}" Height="45" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{StaticResource AccentColor}" CornerRadius="8">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.3" Color="#5A8B7E"/>
                                </Border.Effect>
                                <TextBlock Text="{TemplateBinding Content}" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold" FontSize="15"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Opacity" Value="0.9"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>