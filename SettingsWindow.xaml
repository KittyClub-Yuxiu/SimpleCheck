<Window x:Class="SimpleCheck.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="460" Height="480">

    <Window.Resources>
        <SolidColorBrush x:Key="WindowBackground" Color="#FDFDF9" />
        <SolidColorBrush x:Key="PanelBackground" Color="#FFFFFF" />
        <SolidColorBrush x:Key="AccentColor" Color="#5A8B7E" />
        <SolidColorBrush x:Key="TextColor" Color="#333333" />
        <SolidColorBrush x:Key="TextLightColor" Color="#888888" />
        <SolidColorBrush x:Key="BorderColor" Color="#EFEFEF" />

        <Style TargetType="RadioButton">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="Transparent">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="OuterCircle" Width="20" Height="20" CornerRadius="10" 
                                    BorderBrush="{StaticResource TextLightColor}" BorderThickness="2" Background="Transparent" VerticalAlignment="Center"/>
                            <Border x:Name="InnerCircle" Width="10" Height="10" CornerRadius="5" 
                                    Background="{StaticResource AccentColor}" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                    Opacity="0" RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform><ScaleTransform ScaleX="0" ScaleY="0"/></Border.RenderTransform>
                            </Border>
                            
                            <ContentPresenter Grid.Column="1" Margin="10,0,0,0" VerticalAlignment="Center"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="OuterCircle" Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                                <Setter TargetName="InnerCircle" Property="Opacity" Value="1"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="InnerCircle" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="InnerCircle" Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource WindowBackground}" CornerRadius="16" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="30" ShadowDepth="5" Opacity="0.2" Color="#334433"/>
        </Border.Effect>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="设置" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextColor}" Margin="0,0,0,20"/>

            <StackPanel Grid.Row="1">
                <TextBlock Text="常规设置" FontSize="14" FontWeight="Bold" Foreground="{StaticResource AccentColor}" Margin="0,0,0,15"/>
                
                <Border Background="{StaticResource PanelBackground}" CornerRadius="8" Padding="20" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="当点击关闭按钮时：" FontSize="14" Foreground="{StaticResource TextLightColor}" Margin="0,0,0,15"/>
                        
                        <RadioButton x:Name="RadioToTray" Content="最小化到系统托盘" IsChecked="True"/>
                        <RadioButton x:Name="RadioExit" Content="直接退出程序"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="取消" Click="Cancel_Click" Height="45" Cursor="Hand" Background="Transparent" BorderThickness="0" Foreground="{StaticResource TextLightColor}" FontSize="15">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent" BorderBrush="{StaticResource BorderColor}" BorderThickness="1" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Grid.Column="2" Content="保存" Click="Save_Click" Height="45" Cursor="Hand" Background="{StaticResource AccentColor}" Foreground="White" FontSize="15" FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <Border.Effect><DropShadowEffect BlurRadius="10" Opacity="0.3" Color="#5A8B7E" ShadowDepth="3"/></Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Border>
</Window>