<Window x:Class="SimpleCheck.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SplashScreen"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Width="400"
        Height="300"
        ShowInTaskbar="False">
    <Border Background="#FAFAFA" CornerRadius="12" Margin="10" Padding="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.2" Color="Black"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="Simple Check" FontSize="24" FontWeight="Bold" 
                       Foreground="#333" TextAlignment="Center" Margin="0,50,0,20"/>
            
            <!-- 加载图标 -->
            <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Ellipse Width="40" Height="40" Stroke="#007ACC" StrokeThickness="3" 
                         StrokeDashArray="10,5" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Ellipse.RenderTransform>
                        <RotateTransform x:Name="LoadingAnimation" Angle="0" CenterX="20" CenterY="20"/>
                    </Ellipse.RenderTransform>
                    <Ellipse.Triggers>
                        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="LoadingAnimation" 
                                                     Storyboard.TargetProperty="Angle" 
                                                     From="0" To="360" Duration="0:0:2" 
                                                     RepeatBehavior="Forever"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Ellipse.Triggers>
                </Ellipse>
            </Grid>
            
            <TextBlock Grid.Row="2" Text="正在加载..." FontSize="14" Foreground="Gray" 
                       TextAlignment="Center" Margin="0,20,0,0"/>
        </Grid>
    </Border>
</Window>